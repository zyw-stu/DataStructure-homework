#include <stdio.h>
#include <math.h>
#include "stack.h"
SqStack Q;
int a[9][9];
int available(SqStack* Q,int col,int row)//第col列的皇后能否放在第row行
{
    int j;
    for(j=1;j<col;j++)
    {
        if(row==Q[j]) return 0;
        if(abs(col-j)==abs(row-Q[j])) return 0;
    }
    return i;
}
void queue(){
    int i,j;
    for(j=1;j<=8;j++)
    {
        int flag=0;
        for(i=1;i<=8;i++)
        {
            if(available(&Q,j,i)&&a[i][j]!=-1){
                Q.push(i); flag=1;
            }
        }
        if(flag==0)
        {
            if(Q.empty()) printf("No solution!\n");
            else{
            Q.pop(); j--;
            a[Q[j],j]=-1;
            }
        }
    }
}

int main()
{
    InitQueue(&Q);
    Nqueen();//从第0行开始摆皇后
    if(!Q.empty()) Q.print();
	return 0; 
} 
